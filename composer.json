{
  "name": "micc83/mailamie",
  "description": "Catch All SMTP Server for testing",
  "keywords": [
    "smtp",
    "mailamie",
    "php"
  ],
  "type": "library",
  "homepage": "https://github.com/micc83/mailamie",
  "license": "MIT",
  "authors": [
    {
      "name": "Alessandro Benoit",
      "email": "micc83@gmail.com",
      "homepage": "https://github.com/micc83",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.4|^8.0",
    "ext-fileinfo": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "cboden/ratchet": "^0.4.3",
    "react/event-loop": "^1.2",
    "react/http": "^1.2",
    "symfony/console": "^5.1",
    "symfony/event-dispatcher": "^5.1",
    "zbateson/mail-mime-parser": "^2.2"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.4.8",
    "friendsofphp/php-cs-fixer": "^3.0",
    "phpunit/phpunit": "^9",
    "phpmailer/phpmailer": "^6.1",
    "ratchet/pawl": "^0.4.1",
    "react/child-process": "^0.6.1"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "autoload": {
    "psr-4": {
      "Mailamie\\": "src/"
    }
  },
  "scripts": {
    "check": [
      "./vendor/bin/php-cs-fixer fix --dry-run",
      "./vendor/bin/phpstan analyze",
      "./vendor/bin/phpunit --stop-on-failure --stop-on-error"
    ]
  },
  "bin": [
    "bin/mailamie"
  ],
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
